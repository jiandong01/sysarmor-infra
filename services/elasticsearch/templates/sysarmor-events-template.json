{
    "index_patterns": [
        "sysarmor-events-*"
    ],
    "template": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "index.refresh_interval": "5s",
            "analysis": {
                "analyzer": {
                    "sysdig_analyzer": {
                        "type": "standard",
                        "stopwords": "_none_"
                    }
                }
            }
        },
        "mappings": {
            "properties": {
                "@timestamp": {
                    "type": "date"
                },
                "event_id": {
                    "type": "keyword"
                },
                "collector_id": {
                    "type": "keyword"
                },
                "data_source": {
                    "type": "keyword"
                },
                "pipeline": {
                    "type": "keyword"
                },
                "event": {
                    "type": "object",
                    "properties": {
                        "evt.num": {
                            "type": "long"
                        },
                        "evt.time": {
                            "type": "date",
                            "format": "yyyy-MM-dd'T'HH:mm:ss.SSSSSS'Z'||yyyy-MM-dd'T'HH:mm:ss.SSSSSSSSS'+0000'"
                        },
                        "evt.type": {
                            "type": "keyword"
                        },
                        "evt.args": {
                            "type": "text",
                            "analyzer": "sysdig_analyzer",
                            "fields": {
                                "keyword": {
                                    "type": "keyword",
                                    "ignore_above": 1024
                                }
                            }
                        },
                        "fd.name": {
                            "type": "keyword"
                        },
                        "proc.pid": {
                            "type": "long"
                        },
                        "proc.name": {
                            "type": "keyword"
                        },
                        "proc.cmdline": {
                            "type": "text",
                            "analyzer": "sysdig_analyzer",
                            "fields": {
                                "keyword": {
                                    "type": "keyword",
                                    "ignore_above": 1024
                                }
                            }
                        },
                        "proc.ppid": {
                            "type": "long"
                        },
                        "proc.pname": {
                            "type": "keyword"
                        },
                        "proc.pcmdline": {
                            "type": "text",
                            "analyzer": "sysdig_analyzer",
                            "fields": {
                                "keyword": {
                                    "type": "keyword",
                                    "ignore_above": 1024
                                }
                            }
                        },
                        "user.uid": {
                            "type": "long"
                        },
                        "user.name": {
                            "type": "keyword"
                        },
                        "container.id": {
                            "type": "keyword"
                        },
                        "container.name": {
                            "type": "keyword"
                        },
                        "k8s.pod.name": {
                            "type": "keyword"
                        },
                        "k8s.ns.name": {
                            "type": "keyword"
                        }
                    }
                },
                "host_name": {
                    "type": "keyword"
                },
                "process_name": {
                    "type": "keyword"
                },
                "event_type": {
                    "type": "keyword"
                },
                "file_descriptor": {
                    "type": "keyword"
                },
                "rule_tags": {
                    "type": "keyword"
                },
                "severity": {
                    "type": "keyword"
                },
                "tags": {
                    "type": "keyword"
                },
                "security": {
                    "type": "object",
                    "properties": {
                        "matched_rules": {
                            "type": "keyword"
                        },
                        "risk_score": {
                            "type": "float"
                        },
                        "threat_category": {
                            "type": "keyword"
                        },
                        "mitre_tactics": {
                            "type": "keyword"
                        },
                        "mitre_techniques": {
                            "type": "keyword"
                        }
                    }
                },
                "network": {
                    "type": "object",
                    "properties": {
                        "src_ip": {
                            "type": "ip"
                        },
                        "dst_ip": {
                            "type": "ip"
                        },
                        "src_port": {
                            "type": "integer"
                        },
                        "dst_port": {
                            "type": "integer"
                        },
                        "protocol": {
                            "type": "keyword"
                        }
                    }
                },
                "file": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "keyword"
                        },
                        "name": {
                            "type": "keyword"
                        },
                        "extension": {
                            "type": "keyword"
                        },
                        "size": {
                            "type": "long"
                        },
                        "hash": {
                            "type": "keyword"
                        }
                    }
                }
            }
        }
    }
}