# SysArmor Infrastructure Configuration
# Copy this file to .env and modify as needed

# External host configuration
EXTERNAL_HOST=localhost

# NATS Configuration
NATS_PORT_1=4222
NATS_PORT_2=4223
NATS_PORT_3=4224
NATS_MONITOR_PORT_1=8222
NATS_MONITOR_PORT_2=8223
NATS_MONITOR_PORT_3=8224
NATS_CLUSTER_PORT_1=6222
NATS_CLUSTER_PORT_2=6223
NATS_CLUSTER_PORT_3=6224
NATS_SURVEYOR_PORT=7777

# Kafka Configuration
KAFKA_PORT=9092
KAFKA_JMX_PORT=9101
ZOOKEEPER_PORT=2181
KAFKA_UI_PORT=8080

# OpenSearch Configuration
OPENSEARCH_PORT=9201
OPENSEARCH_DASHBOARDS_PORT=5602
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
INDEX_PATTERN=sysarmor-events-*

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=60s

# Backup Configuration
BACKUP_DIR=./backups

# Logging Configuration
LOG_LEVEL=info
